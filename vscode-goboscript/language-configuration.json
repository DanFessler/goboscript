{
  "comments": {
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "\"", "close": "\"", "notIn": ["string", "comment"] },
    { "open": "/*", "close": "*/", "notIn": ["string", "comment"] }
  ],
  "autoCloseBefore": ";,=}]) \n",
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["/*", "*/"]
  ],
  "wordPattern": "\\$?[_a-zA-Z][_a-zA-Z0-9]*"
}
